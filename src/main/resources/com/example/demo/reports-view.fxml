<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.ReportsController"
            stylesheets="@styles.css">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: rgba(255, 255, 255, 0.95);" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="ðŸ“Š Library Reports &amp; Statistics" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font name="Arial" size="32"/>
                </font>
            </Label>
            <Label text="Generate statistical reports from the library database" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        </VBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: rgba(255, 255, 255, 0.95);" prefWidth="300">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>
            <Label text="REPORT OPTIONS" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
            <Separator/>
            
            <!-- Report Buttons -->
            <Button fx:id="btnTotalBooks" text="1. Total Number of Books" onAction="#generateTotalBooks" prefWidth="270" prefHeight="40" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnTotalValue" text="2. Total Library Value" onAction="#generateTotalValue" prefWidth="270" prefHeight="40" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnBooksPerCategory" text="3. Books Per Category" onAction="#generateBooksPerCategory" prefWidth="270" prefHeight="40" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnAllBooks" text="4. All Books with Categories" onAction="#generateAllBooks" prefWidth="270" prefHeight="40" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnBorrowedCount" text="5. Currently Borrowed Books" onAction="#generateBorrowedCount" prefWidth="270" prefHeight="40" style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnOverdueBooks" text="6. Overdue Books" onAction="#generateOverdueBooks" prefWidth="270" prefHeight="40" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnBooksPerAuthor" text="7. Books Per Author" onAction="#generateBooksPerAuthor" prefWidth="270" prefHeight="40" style="-fx-background-color: #00BCD4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnBooksPerPublisher" text="8. Books Per Publisher" onAction="#generateBooksPerPublisher" prefWidth="270" prefHeight="40" style="-fx-background-color: #795548; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnBorrowersWithCount" text="9. Borrowers with Loan Count" onAction="#generateBorrowersWithCount" prefWidth="270" prefHeight="40" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnDailyStats" text="10. Daily Borrowing Stats" onAction="#generateDailyStats" prefWidth="270" prefHeight="40" style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            
            <Separator/>
            <Label text="BONUS REPORTS" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
            <Separator/>
            
            <Button fx:id="btnMonthlyStats" text="11. Monthly Borrowing Stats" onAction="#generateMonthlyStats" prefWidth="270" prefHeight="40" style="-fx-background-color: #3F51B5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnMostBorrowed" text="12. Most Borrowed Books" onAction="#generateMostBorrowed" prefWidth="270" prefHeight="40" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button fx:id="btnMostActive" text="13. Most Active Borrowers" onAction="#generateMostActive" prefWidth="270" prefHeight="40" style="-fx-background-color: #8BC34A; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
        </VBox>
    </left>
    
    <center>
        <VBox spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.98); -fx-background-radius: 15px;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Result Label for single numeric results -->
            <Label fx:id="resultLabel" text="Select a report from the left panel to view results" 
                   style="-fx-font-size: 18px; -fx-text-fill: #2c3e50; -fx-alignment: center; -fx-wrap-text: true;"
                   visible="true" managed="true">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>
            
            <!-- TableView for tabular results -->
            <TableView fx:id="resultsTable" visible="false" managed="false" 
                       style="-fx-background-color: white; -fx-background-radius: 10px;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
</BorderPane>

